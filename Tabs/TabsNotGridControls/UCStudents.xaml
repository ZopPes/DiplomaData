<UserControl x:Name="userControl" x:Class="DiplomaData.Tabs.TabsNotGridControls.UCStudents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomaData.Tabs.TabsNotGridControls"
             mc:Ignorable="d" 
             >
    <StackPanel Background="Aqua">
        <TextBox Text="{Binding surname}"/>
        <TextBox Text="{Binding name}"/>
        <TextBox Text="{Binding patronymic}"/>
        <ComboBox SelectedItem="{Binding Group}" ItemsSource="{Binding Data.Group, ElementName=userControl}" />
    </StackPanel>
</UserControl>
